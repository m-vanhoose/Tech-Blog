<div class="row">
    <div class="grid-container">
    <div class="grid-item">
      <div class="h2">Login Here</div>
        <form class="entries login-form">
          <div class="form-group entry">
            <label for="email-login">E-mail:</label>
            <input id="email-login" type="text"/>
          </div>
          <div class="form-group entry">
            <label for="password-login">Password:</label>
            <input id="password-login" type="password"/>
          </div>
          <div class="form-group">
            <div class="btn-form">
              <button class="btn submit" type="submit">Login</button>
            </div>
          </div>
      </form>
    </div>
    <div class="grid-item">
      <div class="h2">Signup Here</div>
        <form class="entries signup-form">
          <div class="form-group entry">
            <label for="name-signup">Name:</label>
            <input id="name-signup" type="text"/>
          </div>
          <div class="form-group entry">
            <label for="email-signup">E-mail:</label>
            <input id="email-signup" type="text"/>
          </div>
          <div class="form-group entry">
           <label for="password-signup">Password:</label>
            <input id="password-signup" type="password"/>
          </div>
          <div class="form-group">
            <div class="btn-form">
              <button class="btn submit" type="submit">Signup</button>
            </div>  
          </div>
        </form>
      </div>
    </div>
</div>
<script src="/js/logout.js"></script>
<script src="/js/login.js"></script>